<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>4000</defaultcontrol>
	<animation effect="fade" end="100" time="360">WindowOpen</animation>
	<animation effect="fade" start="100" end="0" time="250">WindowClose</animation>	
	<controls>
		<!-- Storage container for the item details -->
		<control type="list" id="10051">
			<top>-3000</top>
			<left>-3000</left>
			<width>1</width>
			<height>1</height>
			<itemlayout/>
			<focusedlayout/>
		</control>
		<control type="image">
            <top>0</top>
            <left>0</left>
            <width>1920</width>
            <height>1080</height>
            <texture colordiffuse="backgroundtransparentdark">colors/white.png</texture>
        </control>
		<control type="image">
            <right>20</right>
            <top>5</top>
            <width>204</width>
            <height>80</height>
            <aspectratio>scale</aspectratio>
            <texture>moviedb.png</texture>
        </control>
        <!-- Up/Dwon Arrows -->
        <control type="image">
            <visible>Container(4000).HasNext</visible>
            <left>0</left>
            <top>1050</top>
            <width>1920</width>
            <height>16</height>
            <aspectratio>keep</aspectratio>
            <texture colordiffuse="active">icons/arrowdown.png</texture>
        </control>
        <control type="image">
            <visible>Container(4000).HasPrevious</visible>
            <left>0</left>
            <top>60</top>
            <width>1920</width>
            <height>16</height>
            <aspectratio>keep</aspectratio>
            <texture colordiffuse="active">icons/arrowup.png</texture>
        </control>

        <control type="group" id="5000">
            <top>80</top>
            <control type="grouplist" id="4000">
                <height>960</height>
                <scrolltime tween="cubic" easing="out">500</scrolltime>
                <orientation>vertical</orientation>
                <itemgap>0</itemgap>
                <usecontrolcoords>true</usecontrolcoords>
                <defaultcontrol always="true">4300</defaultcontrol>
                <control type="group" id="4100">
                    <left>40</left>
                    <width>1840</width>
                    <height>610</height>
                    <control type="image">
                        <width>400</width>
                        <height>600</height>
                        <aspectratio align="center">scale</aspectratio>
                        <texture background="true">$INFO[Container(10051).ListItem.Art(thumb)]</texture>
                    </control>
                    <control type="grouplist">
                        <top>10</top>
                        <left>440</left>
                        <width>1360</width>
                        <orientation>vertical</orientation>
                        <usecontrolcoords>true</usecontrolcoords>
                        <control type="label">
                            <height>60</height>
                            <aligny>center</aligny>
                            <font>light50</font>
                            <textcolor>active</textcolor>
                            <label>$INFO[Container(10051).ListItem.label]</label>
                        </control>
                        <control type="textbox" id="4100">
                            <visible>!String.isEmpty(Container(10051).ListItem.Property(biography))</visible>
                            <top>20</top>
                            <height max="350">auto</height>
                            <width>1340</width>
                            <font>light24</font>
                            <label>$INFO[Container(10051).ListItem.Property(biography)]</label>
                            <pagecontrol>4101</pagecontrol>
                        </control>
                        <control type="label" id="4200">
                            <top>20</top>
                            <visible>!String.isEmpty(Container(10051).ListItem.Property(Birthday))</visible>
                            <aligny>center</aligny>
                            <width>1000</width>
                            <height>30</height>
                            <font>regular24</font>
                            <label>$INFO[Container(10051).ListItem.Property(Birthday),$LOCALIZE[21893]: [COLOR=active],[/COLOR]] $INFO[Container(10051).ListItem.Property(Age),$ADDON[script.embuary.info 32006]: [COLOR=active],[/COLOR]]</label>
                        </control>
                        <control type="label" id="4201">
                            <visible>!String.isEmpty(Container(10051).ListItem.Property(Place_Of_Birth))</visible>
                            <aligny>center</aligny>
                            <width>1000</width>
                            <height>30</height>
                            <font>regular24</font>
                            <label>$INFO[Container(10051).ListItem.Property(Place_Of_Birth),$ADDON[script.embuary.info 32007]: [COLOR=active],[/COLOR]]</label>
                        </control>
                        <control type="label" id="4203">
                            <visible>!String.isEmpty(Container(10051).ListItem.Property(deathday))</visible>
                            <aligny>center</aligny>
                            <width>1000</width>
                            <height>30</height>
                            <font>regular24</font>
                            <label>$INFO[Container(10051).ListItem.Property(deathday),$LOCALIZE[21897]: [COLOR=active],[/COLOR]]</label>
                        </control>
                    </control>
                </control>
                <control type="scrollbar" id="4101">
                    <visible>!String.isEmpty(Container(10051).ListItem.Property(Biography))</visible>
                    <showonepage>false</showonepage>
                    <top>-520</top>
                    <height>350</height>
                    <left>1835</left>
                    <width>15</width>
                    <onleft>4301</onleft>
                    <onright>4301</onright>
                    <texturesliderbackground colordiffuse="borderdark" border="3">progress/texturebg_border_white.png</texturesliderbackground>
                    <texturesliderbar border="3,6,3,6" colordiffuse="border">progress/texturebg_white.png</texturesliderbar>
                    <texturesliderbarfocus border="3,6,3,6" colordiffuse="active">progress/texturebg_white.png</texturesliderbarfocus>
                </control>
                <include content="button_round">
                    <param name="id" value="4301" />
                    <param name="onclick" value="Action(close)" />
                    <param name="icon" value="icons/buttons/close.png" />
                    <param name="top" value="115" />
                    <param name="left" value="310" />
                    <param name="visible">Control.IsVisible(4101)</param>
                </include>
                <include content="button_round">
                    <param name="id" value="4300" />
                    <param name="onclick" value="Action(close)" />
                    <param name="icon" value="icons/buttons/close.png" />
                    <param name="top" value="-45" />
                    <param name="left" value="310" />
                    <param name="visible">!Control.IsVisible(4101)</param>
                </include>
                <!-- roles in movies -->
                <include content="widget_header">
                    <param name="id">10052</param>
                    <param name="label">$LOCALIZE[31028] $INFO[Container(10051).ListItem.Label] $LOCALIZE[31029]</param>
                </include>
                <include content="widget_content">
                    <param name="id">10052</param>
                    <param name="content">movierole</param>
                    <param name="label1">$INFO[ListItem.Label]</param>
                    <param name="label2">$INFO[ListItem.Year]</param>
                </include>
                <!-- roles in tvshows -->
                <include content="widget_header">
                    <param name="id">10053</param>
                    <param name="label">$LOCALIZE[31028] $INFO[Container(10051).ListItem.Label] $LOCALIZE[31030]</param>
                </include>
                <include content="widget_content">
                    <param name="id">10053</param>
                    <param name="content">movierole</param>
                    <param name="label1">$INFO[ListItem.Label]</param>
                    <param name="label2">$INFO[ListItem.Year]</param>
                </include>
                <!-- images -->
                <include content="widget_header">
                    <param name="id">10054</param>
                    <param name="label">$LOCALIZE[31031] $INFO[Container(10051).ListItem.Label]</param>
                    <param name="height">360</param>
                </include>
                <include content="widget_content">
                    <param name="id">10054</param>
                    <param name="content">postericon</param>
                    <param name="height">360</param>
                    <param name="itemwidth">250</param>
                </include>

            </control>
        </control>
	</controls>
</window>