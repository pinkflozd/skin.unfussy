    <include name="musicplaylisteditor_files_listitem">
        <param name="active">false</param>
        <param name="listid">50</param>
        <definition>
            <control type="image">
                <visible>$PARAM[active]</visible>
                <visible>Control.HasFocus($PARAM[listid]) | Control.HasFocus($PARAM[listid]001)</visible>
                <left>0</left>
                <top>0</top>
                <right>0</right>
                <bottom>0</bottom>
                <texture colordiffuse="active">backgrounds/overlay_background.png</texture>
                <bordertexture colordiffuse="active">colors/white.png</bordertexture>
                <bordersize>1</bordersize>
            </control>
            <control type="image">
                <left>15</left>
                <top>0</top>
                <width>32</width>
                <bottom>0</bottom>
                <aspectratio aligny="center">keep</aspectratio>
                <texture>$VAR[FileListIcon]</texture>
            </control>
            <control type="group">
                <visible>$PARAM[active]</visible>
                <control type="label">
                    <visible>String.IsEmpty(ListItem.Title) | String.IsEqual(ListItem.Label,ListItem.Title)</visible>
                    <left>65</left>
                    <top>0</top>
                    <bottom>0</bottom>
                    <right>20</right>
                    <aligny>center</aligny>
                    <scroll>true</scroll>
                    <label>$INFO[ListItem.Label]</label>
                </control>
                <control type="label">
                    <visible>![String.IsEmpty(ListItem.Title) | String.IsEqual(ListItem.Label,ListItem.Title)]</visible>
                    <left>65</left>
                    <top>0</top>
                    <bottom>0</bottom>
                    <right>20</right>
                    <aligny>center</aligny>
                    <scroll>true</scroll>
                    <label>$INFO[ListItem.Label]$INFO[ListItem.Title]</label>
                </control>
                <control type="label">
                    <left>0</left>
                    <textoffsetx>30</textoffsetx>
                    <top>0</top>
                    <bottom>0</bottom>
                    <right>0</right>
                    <align>right</align>
                    <aligny>center</aligny>
                    <label>$INFO[ListItem.Label2]</label>
                </control>
            </control>
            <control type="group">
                <visible>!$PARAM[active]</visible>
                <control type="label">
                    <visible>String.IsEmpty(ListItem.Title) | String.IsEqual(ListItem.Label,ListItem.Title)</visible>
                    <left>65</left>
                    <top>0</top>
                    <bottom>0</bottom>
                    <right>20</right>
                    <aligny>center</aligny>
                    <label>$INFO[ListItem.Label]</label>
                </control>
                <control type="label">
                    <visible>![String.IsEmpty(ListItem.Title) | String.IsEqual(ListItem.Label,ListItem.Title)]</visible>
                    <left>65</left>
                    <top>0</top>
                    <bottom>0</bottom>
                    <right>20</right>
                    <aligny>center</aligny>
                    <label>$INFO[ListItem.Label]$INFO[ListItem.Title]</label>
                </control>
                <control type="label">
                    <left>0</left>
                    <textoffsetx>30</textoffsetx>
                    <top>0</top>
                    <bottom>0</bottom>
                    <right>0</right>
                    <align>right</align>
                    <aligny>center</aligny>
                    <label>$INFO[ListItem.Label2]</label>
                </control>
            </control>
        </definition>
    </include>

</includes>
