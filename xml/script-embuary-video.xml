<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">3000</defaultcontrol>
	<onload>SetProperty(onnext,SetFocus(100))</onload>
	<onload>ClearProperty(custombusy,home)</onload>
	<onload>ClearProperty(custombusyreason,home)</onload>
	<onload>ClearProperty(custombusylabel,home)</onload>
	<animation effect="fade" end="100" time="360">WindowOpen</animation>
	<animation effect="fade" start="100" end="0" time="250">WindowClose</animation>
	<controls>
		<!-- Storage container for the item details -->
		<control type="list" id="10051">
			<top>-3000</top>
			<left>-3000</left>
			<width>1</width>
			<height>1</height>
			<itemlayout/>
			<focusedlayout/>
		</control>
		<control type="image">
            <top>0</top>
            <left>0</left>
            <width>1920</width>
            <height>1080</height>
            <texture colordiffuse="backgroundtransparentdark">colors/white.png</texture>
        </control>
		<control type="image">
            <right>20</right>
            <top>5</top>
            <width>204</width>
            <height>80</height>
            <aspectratio>scale</aspectratio>
            <texture>moviedb.png</texture>
        </control>
        <!-- No Seach Result -->
        <control type="label">
        	<visible>String.IsEmpty(Container(10051).ListItem.Label)</visible>
        	<left>500</left>
        	<width>1350</width>
        	<top>200</top>
        	<align>center</align>
        	<font>regular50</font>
        	<label>$LOCALIZE[31023]</label>
        </control>
        <!-- Up/Dwon Arrows -->
		<control type="image">
			<visible>Container(3000).HasNext</visible>
			<left>0</left>
			<top>1050</top>
			<width>1920</width>
			<height>16</height>
			<aspectratio>keep</aspectratio>
			<texture colordiffuse="active">icons/arrowdown.png</texture>
		</control>
		<control type="image">
			<visible>Container(3000).HasPrevious</visible>
			<left>0</left>
			<top>60</top>
			<width>1920</width>
			<height>16</height>
			<aspectratio>keep</aspectratio>
			<texture colordiffuse="active">icons/arrowup.png</texture>
		</control>
		<control type="group" id="5000">
			<top>80</top>
			<control type="grouplist" id="3000">
				<height>960</height>
				<scrolltime tween="cubic" easing="out">500</scrolltime>
				<orientation>vertical</orientation>
				<itemgap>0</itemgap>
				<usecontrolcoords>true</usecontrolcoords>
				<defaultcontrol>3200</defaultcontrol>
				<control type="group" id="3100">
					<left>40</left>
					<width>1840</width>
					<height>610</height>
					<control type="image">
						<width>400</width>
						<height>600</height>
						<aspectratio align="center">scale</aspectratio>
						<texture fallback="DefaultVideoFanart.png">$INFO[Container(10051).ListItem.Art(thumb)]</texture>
					</control>
					<control type="grouplist">
						<top>10</top>
						<left>440</left>
						<width>1360</width>
						<orientation>vertical</orientation>
						<usecontrolcoords>true</usecontrolcoords>
						<control type="label">
							<height>60</height>
							<aligny>center</aligny>
							<font>light50</font>
							<textcolor>active</textcolor>
							<label>$INFO[Container(10051).ListItem.Title]$INFO[Container(10051).ListItem.Year, (,)]</label>
						</control>
						<control type="label">
							<visible>!String.IsEmpty(Container(10051).ListItem.Tagline)</visible>
							<height>30</height>
							<aligny>center</aligny>
							<font>regular24</font>
							<textcolor>active</textcolor>
							<label>$INFO[Container(10051).ListItem.Tagline]</label>
						</control>
						<control type="textbox">
							<visible>!String.IsEmpty(Container(10051).ListItem.Tagline)</visible>
							<top>30</top>
							<height>340</height>
							<font>light24</font>
							<label>$INFO[Container(10051).ListItem.Plot]</label>
						</control>
						<control type="textbox">
							<visible>String.IsEmpty(Container(10051).ListItem.Tagline)</visible>
							<top>30</top>
							<height>370</height>
							<font>light24</font>
							<label>$INFO[Container(10051).ListItem.Plot]</label>
						</control>
						<control type="label">
							<visible>!String.IsEqual(Container(10051).ListItem.Type,tvshow)</visible>
							<top>10</top>
							<aligny>center</aligny>
							<font>regular24</font>
							<textcolor>active</textcolor>
							<label>$INFO[Container(10051).ListItem.Genre,$LOCALIZE[515] : [COLOR white],[/COLOR]][CR]$INFO[Container(10051).ListItem.Director,$LOCALIZE[20339] : [COLOR white],[/COLOR]]</label>
