						<control type="label">
							<visible>String.IsEqual(Container(10051).ListItem.Type,tvshow)</visible>
							<top>10</top>
							<aligny>center</aligny>
							<font>regular24</font>
							<textcolor>active</textcolor>
							<label>$INFO[Container(10051).ListItem.Genre,$LOCALIZE[515] : [COLOR white],[/COLOR]][CR]$INFO[Container(10051).ListItem.Studio,$LOCALIZE[29909] : [COLOR white],[/COLOR]]</label>
						</control>
					</control>
					<control type="group">
						<visible>!String.IsEmpty(Container(10051).ListItem.Rating)</visible>
						<left>450</left>
						<top>550</top>
						<control type="image">
							<width>130</width>
							<height>50</height>
							<aspectratio align="right" aligny="center">keep</aspectratio>
							<texture colordiffuse="white">flags/rating.png</texture>
						</control>
						<control type="label">
							<left>40</left>
							<width>90</width>
							<height>50</height>
							<align>center</align>
							<aligny>center</aligny>
							<font>bold30</font>
							<label>$INFO[Container(10051).ListItem.Rating]</label>
						</control>
					</control>
					<control type="group">
						<visible>!String.IsEmpty(Container(10051).ListItem.Duration)</visible>
						<left>1654</left>
						<top>550</top>
						<control type="image">
							<width>176</width>
							<height>50</height>
							<aspectratio align="right" aligny="center">keep</aspectratio>
							<texture colordiffuse="white">flags/time.png</texture>
						</control>
						<control type="label">
							<left>50</left>
							<width>126</width>
							<height>50</height>
							<align>center</align>
							<aligny>center</aligny>
							<font>bold24</font>
							<label>$INFO[Container(10051).ListItem.Duration]</label>
						</control>
					</control>
